@model Product

@{
    ViewData["Title"] = "Index";
}

<h2>All Products</h2>

<div id="card-page">

    @{
        ViewData["Action"] = "Index";
        ViewData["Controller"] = "Products";
    }
    <partial name="_Filters" />

    <div class="main-content">

        <!-- Container for Sorting Choices
            Each link should take the user to this current page and use any combination of the following
            querystring parameters to sort the page:
            - sortOrder (string) - PriceLowToHigh,PriceHighToLow,RatingHighToLow
        -->
        <div id="sorting-options">
            <h3>Sort By</h3>
            <ul>
                <li><a asp-controller="Products" asp-action="sortOrder" asp-route-sort="PriceLowToHigh">Price - Low to High</a></li>
                <li><a asp-controller="Products" asp-action="sortOrder" asp-route-sort="PriceHighToLow">Price - High to Low</a></li>
                <li><a asp-controller="Products" asp-action="sortOrder" asp-route-sort="RatingHighToLow">Rating - High to Low</a></li>
            </ul>
        </div>

        <!-- Container for all of the Products -->
        <div id="grid">
            <!-- The following HTML shows different examples of what HTML
         could be rendered based on different rules. For purposes
         of demonstration we've written it out so you can see it
         when you load the page up. -->
            <!-- Standard Product (assuming no special cases) -->
            <div class="tile ">

                <!-- Link to the Detail page using the product id (e.g. Products/Detail/1) -->
                <a class="product-image" href="~/images/product-images/@Model.ImageName">
                    <img src="/images/product-images/grey-sofa.jpg" />
                </a>
                <div class="details">
                    <p class="name">@Model.Name</p>

                    <!-- .filled will make the star solid -->
                    <div class="rating">
                        @{
                            int stars = (int)Model.AverageRating;
                            for (int i = 1; i <= 5; i++)
                            {
                                if (stars >= i)
                                {
                                    <span class="filled">&#9734;</span>
                                }
                                else
                                {
                                    <span>&#9734;</span>
                                }
                            }
                        }
                    </div>

                    <p class="price">@Model.Price</p>
                </div>
            </div>

            <div class="tile ">
                <!-- Include this if the product is considered a Top Seller -->
                @{
                    if (Model.IsTopSeller)
                    {
                        <span class="banner top-seller">Top Seller!</span>
                    }
                }

                <!-- Link to the Detail page using the product id (e.g. Products/Detail/1) -->
                <a class="product-image" asp-controller="Products" asp-action="Detail" asp-route-id="@Model.Id"></a> 
                <img src="~/images/product-images/@Model.ImageName" />
                <div class="details">
                    <p class="name">@Model.Name</p>

                    <!-- .filled will make the star solid -->
                    <div class="rating">
                        @{
                            int stars2 = (int)Model.AverageRating;
                            for (int i = 1; i <= 5; i++)
                            {
                                if (stars2 >= i)
                                {
                                    <span class="filled">&#9734;</span>
                                }
                                else
                                {
                                    <span>&#9734;</span>
                                }
                            }
                        }
                    </div>

                    <!-- Include this if the remaining quantity is greater than 0, but less than or equal to 5 -->
                    @{
                        if (Model.RemainingStock > 0 && Model.RemainingStock <= 5)
                        {
                            <span class="product-alert">Only @Model.RemainingStock left!</span>
                            <p class="price">@Model.Price</p>
                        }
                    }
                </div>
            </div>

            <!-- Add the .sold-out class if the remaining quantity is 0 -->
            @{
                if (Model.RemainingStock == 0)
                {
                    <div class="tile sold-out">
                        <!-- Include this if the remainig quantity is 0 -->
                        <span class="banner">Sold Out</span>

                        <!-- Link to the Detail page using the product id (e.g. Products/Detail/1) -->
                        <a class="product-image" asp-controller="Products" asp-action="Detail" asp-route-id="@Model.Id"></a>
                            <img src="~/images/product-images/@Model.ImageName" />
                        <div class="details">
                            <p class="name">@Model.Name</p>

                            <!-- .filled will make the star solid -->
                            <div class="rating">
                                @{ 
                                    int stars3 = (int)Model.AverageRating;
                                    for (int i = 1; i <= 5; i++)
                                    {
                                        if (stars3 >= i)
                                        {
                                            <span class="filled">&#9734;</span>
                                        }
                                        else
                                        {
                                            <span>&#9734;</span>
                                        }
                                    }
                                 }
                            </div>

                            <p class="price">@Model.Price</p>
                        </div>
                    </div>
                }
            }


        </div>
    </div>
</div>